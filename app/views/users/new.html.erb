<div class="container">
<h1>Segn Up</h1>

<%= form_for @user do |u|%>
	<div class="form-group">
		<label>Email: </label>
		<%= u.text_field :email, type: "email", class: "form-control"%>
	</div>

	<div class="form-group">
		<label>Password: </label>
		<%= u.password_field :password, type: "password", class: "form-control"%>
	</div>

	<div class="form-group">
		<label>Password confirmation: </label>
		<%= u.password_field :password_confirmation, type: "password", class: "form-control"%>
	</div>

	<div class="form-group">
		<%= u.submit class: "btn btn-info btn-default", value: "login" %>
	</div>
<% end %>
</div>